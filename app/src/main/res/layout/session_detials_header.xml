<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:weightSum="2">

    <TextView
        android:id="@+id/session_grade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="7"
        android:textSize="100sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/session_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/person"
            android:gravity="center"
            android:text="Science"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/session_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/doc"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Social Science"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/session_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/time"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="FEB 17 th ,12:30 PM"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/session_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="3dp"
            android:text="Scheduled"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>
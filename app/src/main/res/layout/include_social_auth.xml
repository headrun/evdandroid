<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp">

    <TextView
        android:id="@+id/text_view_sign_in_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_text_signin_with"
        android:textAllCaps="true"
        android:textColor="@color/text_light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_sign_in_with"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_sign_in_with_google"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:clickable="true"
            android:src="@drawable/google_logo" />

        <ImageView
            android:id="@+id/btn_sign_in_with_facebook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:background="@drawable/facebook_logo"
            android:clickable="true" />
    </LinearLayout>
</RelativeLayout>
